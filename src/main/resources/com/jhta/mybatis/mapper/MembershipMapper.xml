<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhta.mybatis.mapper.membership">
	<select id="getinfo" parameterType="string" resultType="int">
		select nvl(count(*),0) from membership where memId=#{memId} 
	</select>
	
	<insert id="signmake" parameterType="membership">
		insert into membership (memnum,memname,memid,mempwd,memphone,birth,email,grade,memregdate)
		values(memNum.nextval,#{memName},#{memId},#{memPwd},#{memPhone},#{birth},#{email},#{grade},sysdate)
	</insert>
	
	<select id="loging" parameterType="String" resultType="int">
		select memnum from membership where memid=#{memId} and mempwd=#{memPwd}
	</select>
</mapper>